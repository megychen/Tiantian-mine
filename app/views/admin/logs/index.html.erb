<h4 class="text-center"><i class="fa fa-list-alt"></i> 日志列表 </h2>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>操作时间</th>
      <th>操作行为</th>
      <th>管理员</th>
    </tr>
  </thead>
  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td> <%= log.id %> </td>
        <td> <%= log.created_at.to_s(:long) %> </td>
        <td> <%= log.action %></td>
        <td> <%= log.user.email %></td>
      </tr>
    <% end %>

  </tbody>
</table>
