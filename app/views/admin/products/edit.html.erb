<h4 class="text-center"> 编辑产品 </h4>

<div class="col-md-10 col-md-offset-1 col-sm-12">
  <%= simple_form_for [:admin, @product] do |f| %>

    <div class="group">
      <%= f.input :title, label: "名称" %>
    </div>

    <div class="group">
      <%= f.input :description, label: "描述" %>
    </div>

    <div class="group">
      <%= f.input :quantity, label: "数量" %>
    </div>

    <div class="group">
      <% if current_user.is_manager? %>
        <%= f.input :price, label: "价钱" %>
      <% else %>
        <%= f.input :price, label: "价钱", disabled: true %> (暂无权限修改价格)
      <% end %>
    </div>

    <% if @product.image.present? %>
      <span>目前商品图</span><br>
      <%= image_tag(@product.image.thumb.url) %>
    <% end %>

    <div class="group">
      <%= f.input :image, as: :file %>
    </div>

    <%= f.submit "提交", data: { disable_with: "Submitting..." }, class: "btn btn-primary btn-sm" %>

  <% end %>
</div>
