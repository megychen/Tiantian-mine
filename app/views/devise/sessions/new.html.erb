<div class="col-md-6 col-md-offset-3 col-sm-12">
  <h2 class="text-center">登录</h2>

  <br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.email_field :email, label: "邮箱", autofocus: true , class: "form-control", placeholder: "邮箱"%>
    </div>

    <div class="form-group">
      <%= f.password_field :password, label: "密码", required: true, class: "form-control", placeholder: "密码" %>
    </div>

    <div class="form-group">
          <%= f.submit "登录", class: "btn btn-primary",:style => "width:100%;" %>
    </div>

    <div class="form-group">
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    </div>

    <div class="form-group">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>

</div>
