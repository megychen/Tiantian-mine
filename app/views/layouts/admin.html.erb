<!DOCTYPE html>
<html>
<head>
  <title>天天矿业后台管理</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body id="<%= "#{controller_name}-#{action_name}"%>">
  <div class="container-fluid">
    <div class="row">
      <%= render "common/navbar" %>
      <%= render "common/flashes" %>

      <div class="body-wrapper admin-page">
        <div class="col-md-2 left-side">
          <ul class="list-group">
            <li class="list-group-item"><%= link_to("产品列表", admin_products_path) %></li>
            <li class="list-group-item"><%= link_to("订单列表", admin_orders_path) %></li>
            <li class="list-group-item"><%= link_to("用户列表", admin_users_path) %></li>
            <li class="list-group-item"><%= link_to("日志列表", admin_logs_path) %></li>
          </ul>
        </div>
        <div class="col-md-9 col-md-offset-1 right-side">
          <%= yield %>
        </div>
      </div>

      <%= render "common/footer" %>
    </div>
  </div>
</body>
</html>
